<% include ../partials/header %>

<% include ../partials/aside %>

<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Form Tambah Menu</div>
        </div>
        <div class="col s6 offset-s3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Input Menu</span><br>
                    <div class="row">
                        <form action="" method="post" class="col s12">
                            <div class="row">
                                <div class="input-field col s12">
                                    <input placeholder="Masukan Nama Menu" name="nama" type="text" value="<%= data.nama %>">
                                    <input name="id_menu" type="hidden" value="<%= data.id_menu %>">
                                    <label for="first_name">Nama Menu</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input placeholder="Masukan Harga Menu" name="harga" type="text" value="<%= data.harga %>">
                                    <label for="first_name">Harga</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input placeholder="Masukan Stok Menu yang Tersedia" name="stok" type="text"  value="<%= data.stok %>">
                                    <label for="first_name">Stok</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <select name="sifat">
                                        <option value="" readonly>Choose your option</option>
                                        <% if(data.sifat == 'T') {%>
                                          <option value="T" selected>Titipan</option>
                                          <option value="BT">Bukan Titipan</option>
                                        <% }else{ %>
                                          <option value="T" >Titipan</option>
                                          <option value="BT" selected>Bukan Titipan</option>
                                        <% } %>
                                    </select>
                                    <label>Sifat</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <select name="jenis_menu">
                                        <option value="" readonly>Choose your option</option>
                                        <% if(data.jenis_menu == 'sayur') {%>
                                          <option value="sayur" selected>Sayur</option>
                                          <option value="daging">Daging</option>
                                          <option value="gorengan">Gorengan</option>
                                          <option value="buah">Buah</option>
                                          <option value="makanan_ringan">Makanan Ringan</option>
                                          <option value="minuman">Minuman</option>
                                        <% }else if(data.jenis_menu == 'daging'){ %>
                                          <option value="sayur">Sayur</option>
                                          <option value="daging" selected>Daging</option>
                                          <option value="gorengan">Gorengan</option>
                                          <option value="buah">Buah</option>
                                          <option value="makanan_ringan">Makanan Ringan</option>
                                          <option value="minuman">Minuman</option>
                                        <% }else if (data.jenis_menu == 'gorengan'){ %>
                                          <option value="sayur">Sayur</option>
                                          <option value="daging">Daging</option>
                                          <option value="gorengan" selected>Gorengan</option>
                                          <option value="buah">Buah</option>
                                          <option value="makanan_ringan">Makanan Ringan</option>
                                          <option value="minuman">Minuman</option>
                                        <% }else if (data.jenis_menu == 'buah'){ %>
                                          <option value="sayur">Sayur</option>
                                          <option value="daging">Daging</option>
                                          <option value="gorengan">Gorengan</option>
                                          <option value="buah" selected>Buah</option>
                                          <option value="makanan_ringan">Makanan Ringan</option>
                                          <option value="minuman">Minuman</option>
                                        <% }else if (data.jenis_menu == 'makanan_ringan'){ %>
                                          <option value="sayur">Sayur</option>
                                          <option value="daging">Daging</option>
                                          <option value="gorengan">Gorengan</option>
                                          <option value="buah">Buah</option>
                                          <option value="makanan_ringan" selected>Makanan Ringan</option>
                                          <option value="minuman">Minuman</option>
                                        <% }else { %>
                                          <option value="sayur">Sayur</option>
                                          <option value="daging">Daging</option>
                                          <option value="gorengan">Gorengan</option>
                                          <option value="buah">Buah</option>
                                          <option value="makanan_ringan" selected>Makanan Ringan</option>
                                          <option value="minuman" selected>Minuman</option>
                                        <% } %>
                                    </select>
                                    <label>Jenis Makanan</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input class="waves-effect waves-light btn" type="submit" value="Simpan">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<% include ../partials/footer %>
<script src="/backend/assets/plugins/google-code-prettify/prettify.js"></script>
<script src="/backend/assets/js/pages/dialogs.js"></script>
<script type="text/javascript">
    var msg = '<%- msg %>';
    if(msg) {
      Materialize.toast(msg, 5000);
    }
</script>
