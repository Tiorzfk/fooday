<% include ../partials/header %>

<% include ../partials/aside %>
<style media="screen">
  table {
    border: 0;
  }
</style>
<main class="mn-inner">
  <div class="row">
      <div class="col s12 m12 l12">
          <div class="card">
              <div class="card-content">
                  <span class="card-title">Management User</span>
                  <table id="example" class="display responsive-table datatable-example">
                      <thead>
                          <tr>
                              <th>Name</th>
                              <th>Username</th>
                              <th>Jenis User</th>
                              <th width="25%">Option</th>
                          </tr>
                      </thead>
                      <tfoot>
                          <tr>
                              <th>Name</th>
                              <th>Username</th>
                              <th>Jenis User</th>
                              <th width="25%">Option</th>
                          </tr>
                      </tfoot>
                      <tbody>
                        <% data.forEach(function(data) { %>
                          <tr>
                              <td><%= data.nama %></td>
                              <td><%= data.nama %></td>
                              <td><%= data.jenis_user %></td>
                              <td>
                                <% if(data.jenis_user == 'user') {%>
                                  <a href="/admin/user/detail/<%=data.id_user%>" class="waves-effect waves-light btn btn-small m-b-xs"> Detail </a>
                                <% } %>
                                <% if(data.jenis_user != 'user') {%>
                                  <a href="/admin/user/detail/<%=data.id_user%>" class="waves-effect waves-light btn btn-small m-b-xs"> Edit </a>
                                <% } %>
                                <a href="/admin/user/detail/<%=data.id_user%>" class="waves-effect waves-light btn pink btn-small m-b-xs"> Delete </a>
                              </td>
                          </tr>
                        <% }); %>
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>
</main>

<% include ../partials/footer %>
<script src="/backend/assets/plugins/jquery/jquery-2.2.0.min.js"></script>
<script src="/backend/assets/plugins/materialize/js/materialize.min.js"></script>
<script src="/backend/assets/plugins/material-preloader/js/materialPreloader.min.js"></script>
<script src="/backend/assets/plugins/datatables/js/jquery.dataTables.min.js"></script>
<script src="/backend/assets/js/pages/table-data.js"></script>
