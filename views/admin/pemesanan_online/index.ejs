<% include ../partials/header %>


<% include ../partials/aside %>
<style media="screen">
  table {
    border: 0;
  }
</style>
<main class="mn-inner">
  <div class="row">
      <div class="col s12 m12 l12">
          <div class="card">
              <div class="card-content">
                  <span class="card-title">Management Pemesanan</span>
                  <a href="/admin/pemesanan/add" class="waves-effect waves-light btn m-b-xs">Tambah</a>
                  <table id="example" class="display responsive-table datatable-example">
                      <thead>
                          <tr>
                              <th>User</th>
                              <th>Menu</th>
                              <th>Total Harga</th>
                              <th>Status</th>
                              <th>Tanggal Pesan</th>
                              <th width="20%">Option</th>
                          </tr>
                      </thead>
                      <tfoot>
                          <tr>
                              <th>User</th>
                              <th>Menu</th>
                              <th>Total Harga</th>
                              <th>Status</th>
                              <th>Tanggal Pesan</th>
                              <th width="20%">Option</th>
                          </tr>
                      </tfoot>
                      <tbody>
                        <% data.forEach(function(data) { %>
                          <tr>
                              <td><%= data.user.nama %></td>
                              <td><ul><% data.pesan_menus.forEach(function(item) { %>
                                  <li><%=item.menu.nama%></li>
                              <% }) %>
                              </ul></td>
                              <td><%= data.total_harga %></td>
                              <td><%= data.status %></td>
                              <td></td>
                              <td><a onclick="return confirm('Apakah Anda Yakin ?')" href="/admin/menu/delete/<%=data.id_pemesanan%>" class="waves-effect waves-light btn pink m-b-xs"> Hapus </a></td>
                          </tr>
                        <% }); %>
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>
</main>

<% include ../partials/footer %>
<script src="/backend/assets/plugins/google-code-prettify/prettify.js"></script>
<script src="/backend/assets/js/pages/dialogs.js"></script>
<script type="text/javascript">
    var msg = '<%- msg %>';
    if(msg) {
      Materialize.toast(msg, 5000);
    }
</script>
